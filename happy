#include<iostream>
#include<cmath>
using namespace std;

int arr[2],p=0;
static int j=0,count=0;
void mode1(int );
void sum_num( );

	void sum_num(){
	
		int l;
		p=0;
		
	    count++;
		for(l=0;l<=j;l++)
		{
			p =arr[l]*arr[l]+p;
	
			//	cout<<arr[l]<<endl;
				}
				
				//	cout<<p<<endl;
		if(p==1){
			cout<<"happy number"<<endl;
			cout<<"count"<<count;
			}
		else{
		j=0;
		mode1(p);
	  }
	}

void mode1(int n){
	int y,x;
	y=n%10;
	arr[j]=y;
	x=n/10;
	j++;
if(x>10)
{
	j=0;
	mode1(x);
}
else
{
	arr[j]=x;

	sum_num();
	
	}	
}


int main(){

	int num;
	cout<<"ENTER THE NUMBER : ";
	cin>>num;
	if(num<10)
	{
	num=num*num;
	count++;
	 mode1(num);
}
else
	mode1(num);
return 0;
}
